# .env.example
# Copy this file to .env and fill in your actual values

# ===========================================
# ENVIRONMENT CONFIGURATION
# ===========================================
# Current environment: test, staging, production
TEST_ENV=test

# ===========================================
# APPLICATION URLS
# ===========================================
# Base URLs for different environments
BASE_URL=https://test.deribit.com
API_BASE_URL=https://test.deribit.com/api/v2
WS_BASE_URL=wss://test.deribit.com/ws/api/v2

# Staging URLs (uncomment when using staging)
# BASE_URL=https://staging.deribit.com
# API_BASE_URL=https://staging.deribit.com/api/v2
# WS_BASE_URL=wss://staging.deribit.com/ws/api/v2

# Production URLs (uncomment when using production)
# BASE_URL=https://www.deribit.com
# API_BASE_URL=https://www.deribit.com/api/v2
# WS_BASE_URL=wss://www.deribit.com/ws/api/v2

# ===========================================
# AUTHENTICATION - TEST ENVIRONMENT
# ===========================================
# Test environment credentials
TEST_USERNAME=your-test-email@example.com
TEST_PASSWORD=your-test-password
TEST_API_KEY=your-test-api-key
TEST_API_SECRET=your-test-api-secret

# ===========================================
# AUTHENTICATION - STAGING ENVIRONMENT
# ===========================================
# Staging environment credentials
STAGING_USERNAME=your-staging-email@example.com
STAGING_PASSWORD=your-staging-password
STAGING_API_KEY=your-staging-api-key
STAGING_API_SECRET=your-staging-api-secret

# ===========================================
# AUTHENTICATION - PRODUCTION ENVIRONMENT
# ===========================================
# Production environment credentials (use with extreme caution)
PROD_USERNAME=your-prod-email@example.com
PROD_PASSWORD=your-prod-password
PROD_API_KEY=your-prod-api-key
PROD_API_SECRET=your-prod-api-secret

# ===========================================
# OAUTH/CLIENT CREDENTIALS
# ===========================================
# OAuth client credentials for API authentication
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret

# ===========================================
# TESTING CONFIGURATION
# ===========================================
# Headless mode (true/false)
HEADLESS=true

# Browser selection (chromium, firefox, webkit)
BROWSER=chromium

# Parallel workers
WORKERS=4

# Test timeout (milliseconds)
TEST_TIMEOUT=30000

# Retry attempts
RETRIES=2

# ===========================================
# LOGGING CONFIGURATION
# ===========================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log file paths
LOG_FILE_PATH=./logs/test.log
ERROR_LOG_FILE_PATH=./logs/error.log

# ===========================================
# REPORTING CONFIGURATION
# ===========================================
# Report output directory
REPORT_DIR=./reports

# Screenshot on failure (true/false)
SCREENSHOT_ON_FAILURE=true

# Video recording (true/false)
VIDEO_RECORDING=false

# Trace collection (true/false)
TRACE_COLLECTION=true

# ===========================================
# CI/CD CONFIGURATION
# ===========================================
# CI environment indicator
CI=false

# GitHub Actions specific
GITHUB_ACTIONS=false

# ===========================================
# SLACK NOTIFICATIONS
# ===========================================
# Slack webhook for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Slack channels
SLACK_CHANNEL_ALERTS=#qa-alerts
SLACK_CHANNEL_NOTIFICATIONS=#qa-notifications

# ===========================================
# DATABASE CONFIGURATION (if needed)
# ===========================================
# Test database connection
TEST_DB_HOST=localhost
TEST_DB_PORT=5432
TEST_DB_NAME=deribit_test
TEST_DB_USER=test_user
TEST_DB_PASSWORD=test_password

# ===========================================
# TRADING SPECIFIC CONFIGURATION
# ===========================================
# Default trading parameters
DEFAULT_CURRENCY=BTC
DEFAULT_INSTRUMENT=BTC-PERPETUAL
DEFAULT_ORDER_AMOUNT=10
DEFAULT_ORDER_PRICE=50000

# Risk management limits
MAX_ORDER_AMOUNT=1000
MAX_POSITION_SIZE=5000
MAX_DAILY_LOSS=1000

# ===========================================
# PERFORMANCE TESTING
# ===========================================
# Load testing parameters
LOAD_TEST_USERS=10
LOAD_TEST_DURATION=300
LOAD_TEST_RAMP_UP=60

# ===========================================
# DEBUGGING
# ===========================================
# Debug mode (true/false)
DEBUG_MODE=false

# Verbose logging (true/false)
VERBOSE_LOGGING=false

# Screenshot directory
SCREENSHOT_DIR=./screenshots

# ===========================================
# MOCK/STUB CONFIGURATION
# ===========================================
# Use mock API (true/false)
USE_MOCK_API=false

# Mock API port
MOCK_API_PORT=3001

# ===========================================
# SECURITY
# ===========================================
# API rate limiting
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# Request timeout
REQUEST_TIMEOUT=10000

# ===========================================
# FEATURE FLAGS
# ===========================================
# Enable/disable specific test features
ENABLE_API_TESTS=true
ENABLE_UI_TESTS=true
ENABLE_E2E_TESTS=true
ENABLE_PERFORMANCE_TESTS=false
ENABLE_SECURITY_TESTS=false

# ===========================================
# THIRD-PARTY INTEGRATIONS
# ===========================================
# Allure reporting
ALLURE_RESULTS_DIR=./reports/allure-results
ALLURE_REPORT_DIR=./reports/allure-report

# JUnit reporting
JUNIT_REPORT_PATH=./reports/junit.xml

# ===========================================
# CUSTOM CONFIGURATION
# ===========================================
# Custom wait times (milliseconds)
CUSTOM_WAIT_TIME=2000
CUSTOM_RETRY_DELAY=1000

# Custom test data
CUSTOM_TEST_USER_PREFIX=test_user_
CUSTOM_TEST_ORDER_PREFIX=test_order_
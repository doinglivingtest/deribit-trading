{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@pages/*": ["pages/*"],
      "@api/*": ["api/*"],
      "@tests/*": ["tests/*"],
      "@fixtures/*": ["fixtures/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "test-results", "reports"]
}